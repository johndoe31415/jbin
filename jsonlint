import json
import sys

if len(sys.argv) > 1:
	infile = sys.argv[1]
	with open(infile) as f:
		data = f.read()
else:
	data = sys.stdin.read()
data = json.loads(data)
print(json.dumps(data, indent = 4, sort_keys = True))
