import json
import sys
import collections
from FriendlyArgumentParser import FriendlyArgumentParser

class JSONLinter():
	def __init__(self, args):
		self._args = args

	def _lint_data(self, bytes_data: bytes):
		data = json.loads(bytes_data, object_pairs_hook = collections.OrderedDict)

		if self._args.output_format == "pretty":
			text = json.dumps(data, indent = 4 if self._args.use_spaces else "\t", sort_keys = self._args.sort_keys == "alphabetical", ensure_ascii = not self._args.allow_unicode)
			print(text)
		elif self._args.output_format == "oneline":
			print(json.dumps(data, sort_keys = self._args.sort_keys == "alphabetical"), ensure_ascii = not self._args.allow_unicode)
		elif self._args.output_format == "brief":
			print(json.dumps(data, separators = (",", ":"), sort_keys = self._args.sort_keys == "alphabetical"), ensure_ascii = not self._args.allow_unicode)
		else:
			raise NotImplementedError(self._args.output_format)

	def _lint_file(self, filename: str):
		with open(filename, "rb") as f:
			data = f.read()
		self._lint_data(data)

	def run(self):
		if len(self._args.filename) == 0:
			# Read from stdin
			self._lint_data(sys.stdin.read())
		else:
			# Lint files
			for filename in self._args.filename:
				self._lint_file(filename)

parser = FriendlyArgumentParser(description = "Format a JSON file nicely.")
parser.add_argument("-u", "--allow-unicode", action = "store_true", help = "Do not force ASCII-only output, but allow unicode characters as well.")
parser.add_argument("-S", "--use-spaces", action = "store_true", help = "Use spaces instead of tabs for indentation. Only has an effect when the 'pretty' output format is chosen.")
parser.add_argument("-s", "--sort-keys", choices = [ "alphabetical", "keep" ], default = "keep", help = "Sort the keys of dicts in the described fashion. Can be one of %(choices)s, defaults to %(default)s.")
parser.add_argument("-o", "--output-format", choices = [ "pretty", "oneline", "brief" ], default = "pretty", help = "Show the output in the described fashion. Can be one of %(choices)s, defaults to %(default)s.")
parser.add_argument("filename", metavar = "filename", nargs = "*", help = "Lint these filename(s). If omitted, read from stdin.")
args = parser.parse_args(sys.argv[1:])

JSONLinter(args).run()
